<li class="spot-list">
  <%= link_to spot_path(spot) do %>
    <% if spot.image %>
      <%= image_tag spot.image.url, id: "spot-img" %>
    <% else %>
      <%= image_tag no-image.url, id: "spot-img" %>
    <% end %>
    <%= spot.name %>
  <% end %>
  <span class="spot-user">
    投稿者 : <%= link_to spot.user.name, user_path(spot.user) %>
    date : <%= spot.date %>
  </span>
</li>