<h1><%= @user.name %></h1>

<%= render 'follow_form' if user_signed_in? %>

<% if @user.profile %>
  <%= @user.profile.birthplace %>
<% end %>
<h3>user spots</h3>
<p>
  <% @spots.each do |spot| %>
    <ul>
      <li><%=link_to "#{spot.name}", spot_path(spot) %></li>
    </ul>
  <% end %>
</p>

<% if current_user.id == @user.id %>
  <% if @user.profile %>
    <%= link_to "Profie Edit", edit_profile_path(@profile) %>
  <% else%>
    <%= link_to "Profile Add", new_profile_path(@profile) %>
  <% end %>
<% end %>